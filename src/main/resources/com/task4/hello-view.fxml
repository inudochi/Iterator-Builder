<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.task4.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>

  <ImageView fx:id="screen" fitHeight="400" fitWidth="400" preserveRatio="true" />

  <HBox alignment="CENTER" spacing="10.0">
    <Button onAction="#preview" text="◀--" />
    <Button fx:id="startStopButton" onAction="#toggleAnimation" text="⏯" />
    <Button onAction="#next" text="--▶" />
  </HBox>

  <TextField fx:id="pathField" promptText="Введите путь к папке" text="src\main\resources\img" />
  <Button onAction="#setPath" text="Задать путь" />

  <TextField fx:id="delayField" promptText="Задержка в миллисекундах" />
  <Button onAction="#updateDelay" text="Задать задержку" />

</VBox>
